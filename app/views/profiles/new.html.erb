<h2>Crie o seu perfil</h2>

<%= form_with scope: :user, local: true, url: profiles_path do |form| %>

	<div class="form-horizontal">
	
		<div class="form-group">
			<%= form.label :firstname %>
			<%= form.text_field :firstname, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :lastname %>
			<%= form.text_field :lastname, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :born_on %>
			<%= form.date_field :born_on, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :sex %>
			<%= form.radio_button :sex, "Feminino" %>
			<%= form.radio_button :sex, "Masculino" %>
		</div>

		<div class="form-group">
			<%= form.label :gender %>
			<%= form.text_field :gender, class: "form-control" %>
		</div>
		<%= form.submit "Criar meu perfil", class: "btn btn-success" %>	
	</div>

<% end %>
